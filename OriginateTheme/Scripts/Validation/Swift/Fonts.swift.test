import UIKit

public struct Fonts {
    var dictionary: ThemeDefinition

    public var defaultText: UIFont {
        return UIFont.font("fonts.defaultText", dictionary: dictionary, fallback: UIFont(name: "HelveticaNeue", size: 22.0)!)
    }

    public var defaultLight: UIFont {
        return UIFont.font("fonts.defaultLight", dictionary: dictionary, fallback: UIFont(name: "HelveticaNeue-Light", size: 16.0)!)
    }

    public var defaultItalic: UIFont {
        return UIFont.font("fonts.defaultItalic", dictionary: dictionary, fallback: UIFont(name: "HelveticaNeue-Thin", size: 14.0)!)
    }

    public var defaultBold: UIFont {
        return UIFont.font("fonts.defaultBold", dictionary: dictionary, fallback: UIFont(name: "HelveticaNeue-Bold", size: 14.0)!)
    }

    public init(dictionary: ThemeDefinition = [:]) {
        self.dictionary = dictionary
    }
}
